                <div class="form-group">
                  <label>Password</label>
                  <input type="password" name="password" class="form-control p_input">
                </div>
                <div class="form-group">
                  <label>Confirm Password</label>
                  <input type="password" name="cpassword" class="form-control p_input">
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-warning btn-block enter-btn">Login</button>
                </div>
                <p class="sign-up text-center">Already have an Account?<a href="/" class="text-warning"> Sign Up</a></p>
