<%- include('header') %>
  <style>
    .table td img,
    .jsgrid .jsgrid-table td img {
      width: 100px;
      height: 100px;
      border-radius: 100%;
    }
    .content-wrapper {
      width: 100%;
      height: 100%;
      background-image: url('https://larsensolutions.no/demos/particle-animation.gif');
      background-position: left center;
      background-repeat: no-repeat;
      background-size: cover;
      position: relative;
    }
    .content-wrapper::before {
      content: "";
      width: 100%;
      height: 100%;
      position: absolute;
      background-color: rgba(25, 28, 36, 0.416);
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
    }
    .card {
      background-color: transparent;
      background-color: rgba(30, 31, 38, 0.5);
      backdrop-filter: blur(5px);
      transition: all 1s ease;
    }
    button {
      padding: 5px 10px;
      background-color: transparent;
      border: none;
      color: white;
      border-radius: 3px;
    }
    .card:hover button {
      text-shadow: 0px 0px 5px white;
    }
    .blogImg:hover {
      transform: scale(1);
      transition: all 1s ease;
      z-index: 1999;
    }

    .blogImg::before, .blogImg::after {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      transform: scale3d(0, 0, 1);
      transition: transform .3s ease-out 0s;
      background: rgba(25, 28, 36, 0.21);
      content: '';
      pointer-events: none;
    }
    .blogImg::before {
      transform-origin: left top;
    }
    .blogImg::after {
      transform-origin: right bottom;
    }
    .blogImg:hover::before,
    .blogImg:hover::after,
    .blogImg:focus::before,
    .blogImg:focus::after {
      transform: scale3d(1, 1, 1);
    }
    .blog {
      width: 100%;
      height: auto;
      text-align: center;
    }
    .blogContain {
      padding: 10px;
    }
    .blogImg img {
      width: 100%;
      height: 200px;
      object-fit: contain;
      object-position: center;
    }

    .blogContain p {
      margin: 10px;
    }

    .bi-trash, .bi-pencil {
      transition: all 1s ease;
    }
    .bt a{
      background-color: #191c24;
      padding: 10px 15px;
      border: 1px solid rgba(73, 72, 72, 0.49);
      box-shadow: 0px 0px 4px 3px rgba(58, 65, 82, 0.433);
    }
    a:hover{
      text-decoration: none;
    }
    .bi-trash:hover.bi-trash {
      transition: all 1s ease;
      transform: rotate(180deg);
    }

    .bi-pencil:hover {
      transform: translateX(10px);
    }
  </style>

  <!-- partial -->
  <div class="main-panel">
    <div class="content-wrapper">
      
      <div class="page-header">
        <h3 class="page-title"> Blog View </h3>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/viewblog">Blog View</a></li>
            <li class="breadcrumb-item active" aria-current="page">Blog tables</li>
          </ol>
        </nav>
      </div>
      <div class="row">
        <% blogData.map((val)=>{
          const {id,title,description,image} = val %>
          <div class="col-lg-3 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped">
                    <tbody>
                      <div class="blog">
                        <div class="blogImg">
                          <img src="<%= image %>" width="250">
                        </div>
                        <div class="blogContain">
                          <p>
                            <%= "ID : " +id %>
                          </p>
                          <h3>
                            <%= title %>
                          </h3>
                          <p>
                            <%= description %>
                          </p>
                          <div class="bt d-flex justify-content-between">
                            <a href="/DeleteBlog?id=<%=id%>">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="red"
                                class="bi bi-trash" viewBox="0 0 16 16">
                                <path
                                  d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                <path
